# FREE WISDOM
function wisdom() {
  if command -v fortune >/dev/null && command -v cowsay >/dev/null; then
    tfortune print | cowsay
  else
    echo "I can't predict the future without fortune or cowsay installed..."
  fi
}

# Quality comments
function git() {
  local quotes=(
    "Keep calm and commit often."
    "In git we trust."
    "One commit at a time."
    "Refactor like there's no tomorrow."
    "Push code, not regrets."
    "Code is ephemeral, commits are eternal."
  )
  local random_quote=${quotes[$RANDOM % ${#quotes[@]}]}

  if [[ "$1" == "commit" ]]; then
    echo "ðŸ¤– ${random_quote}"
  fi

  command git "$@"
}

# Typewriter CAT
function typecat() {
  while IFS= read -r line; do
    for (( i=0; i<${#line}; i++ )); do
      printf "%s" "${line:$i:1}"
      sleep 0.025
    done
    printf "\n"
  done < "$1"
}

# Motivational Exit
